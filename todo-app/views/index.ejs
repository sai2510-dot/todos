<!DOCTYPE html>
<html>
<head>
  <title>To-do Manager</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include('header') %>

  <div class="container">
    <!-- Form to add new todo -->
    <form method="POST" action="/todos">
      <input type="text" name="title" placeholder="Enter to-do title" required />
      <input type="date" name="dueDate" required />
      <button type="submit">Add</button>
    </form>

    <!-- Include todos partial to list todos in 3 sections -->
    <%- include('todos') %>
  </div>

  <%- include('footer') %>
</body>
</html>
